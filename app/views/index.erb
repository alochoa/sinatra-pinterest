<div class="container">
	<h3>My Pins</h3>

	<% if @pins.count > 0 %>
		<% @pins.each do |pin| %>
				<article class="pin">
					<a href="/pins/<%= pin.id %>">
						<img src="<%= pin.image %>">
					</a>
					<h4><%= pin.title %></h4>
					<h5>Posted by: <%= pin.user.username %></h5>
					<p><%= pin.description %>
						<span class="pull-right">
							<i class="glyphicon glyphicon-comment"></i> <%= pin.comments.count %>
						</span>
					</p>
				</article>
		<% end %>
	<% else %>
		<h4>There are no pins to show. Perhaps you should <a href="/pins/new" class="btn btn-success btn-sm">Add a Pin</a></h4>
	<% end %>
</div>



