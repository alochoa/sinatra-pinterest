<div class="container">
	<div class="pin">
		<img src="<%= @pin.image %>">
		<h4><%= @pin.title %></h4>
		<p><strong>Posted by:</strong> <%= @pin.user.username %></p>
		<p><%= @pin.description %></p>
		<% if @pin.user.id == current_user.id %>
			<a href="/pins/<%= @pin.id %>/edit" class="btn btn-sm btn-warning">Edit Pin</a>
		<% end %>
	</div>
	<div class="comments">
		<h4>Comments</h4>
		<% @pin.comments.each do |comment| %>
			<div class="comment">
				<p><strong><%= comment.user.username %></strong> on <%= comment.created_at %></p>
				<hr>
				<p><%= comment.body %></p>	
			</div>	
		<% end %>
		<form class="form-horizontal" method="POST" action="/pins/<%= @pin.id %>/comments/create">
			<div class="form-group">
				<textarea name="body" placeholder="Enter a comment..." rows="5" cols="80"></textarea>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Comment</button>
			</div>
		</form>
	</div>
</div>
